var REQUIRED_OPTS = [
  'template',
  'runAction',
  'renderOpts',
  'loadingTitle',
  'modalModel'
];

_.each(REQUIRED_OPTS, function (item) {
  if (opts[item] === undefined) throw new Error(item + ' is required');
  this['_' + item] = opts[item];
}, this);
